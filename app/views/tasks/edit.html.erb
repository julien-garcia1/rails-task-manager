<h1>Edit</h1>
<%= form_for(@tasks) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :details %>
  <%= f.text_field :details %>
  <%= f.check_box :completed, class: 'form-check-input' %>
  <%= f.label :completed, "Done", class: 'form-check-label' %></span>
  <%= f.submit %>
<% end %>

<hr>

<%= link_to 'Back to tasks', tasks_path %>